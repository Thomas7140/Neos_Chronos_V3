# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=chronos_stats
DB_USER=your_database_user
DB_PASS=your_database_password
DB_PREFIX=chronos_

# Application Settings
APP_NAME="Chronos V3"
APP_URL=http://localhost
APP_DEBUG=false
APP_TIMEZONE=UTC

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_DEFAULT_PASSWORD=change_this_password

# Security
SESSION_LIFETIME=7200
HASH_ALGORITHM=sha256
CSRF_TOKEN_EXPIRY=3600

# Stats Configuration
STATS_PER_PAGE=30
RECORDS_PER_PAGE=50
ENABLE_MONTHLY_STATS=true
ENABLE_HALL_OF_FAME=true

# Server Configuration
SERVER_NAME="My BHD Server"
SERVER_IP=127.0.0.1
SERVER_PORT=3000

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=log,txt

# Cache
ENABLE_CACHE=true
CACHE_LIFETIME=3600
